// partial for post items
- posts.each do |post|
	.box.panel.panel-default#post-{:id => "post_#{post.id}"}
		%img{:src => asset_path("Tropical_Beach_preview.jpg")}
		%h2
			= post.title
		%p.user 
			Submitted by
			= post.title
		%p.description
			= pretify(post.description) 
			= link_to "read more", post.url_link